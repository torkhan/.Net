<h1>Form</h1>
@if(ViewBag.Message != null)
{
    <div class="row m-1 justify-content-center align-items-center ">
        <div class="col-6 alert alert-success">
            @ViewBag.Message
        </div>
    </div>
}
<form enctype="multipart/form-data" asp-controller="First" asp-action="SubmitForm" method="post">
    <div class="row m-1 justify-content-center align-items-center">
        <input type="file" name="images" multiple />
    </div>
    <div class="row m-1 justify-content-center align-items-center">
        <input type="text" name="nom" placeholder="Votre nom" class="col-6 form-control" />
    </div>
    <div class="row m-1 justify-content-center align-items-center">
        <input type="text" name="prenom" placeholder="Votre prénom" class="col-6 form-control" />
    </div>
    <div class="row m-1 justify-content-center align-items-center">
        <button type="submit" class="btn btn-danger col-6 form-control" >Valider</button>
    </div>
</form>

