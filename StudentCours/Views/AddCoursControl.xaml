<UserControl x:Class="StudentCours.Views.AddCoursControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StudentCours.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <GroupBox Header="Ajouter un cours">
            <StackPanel>
                <Label Content="Titre du cours : " Margin="10"></Label>
                <TextBox Text="{Binding Title}" Margin="10" Padding="10" />
                <Button Content="Valider" Command="{Binding ConfirmCommand}" Margin="10" Padding="10"></Button>
            </StackPanel>
        </GroupBox>
    </StackPanel>
</UserControl>
