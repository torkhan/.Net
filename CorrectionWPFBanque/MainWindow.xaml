<Window x:Class="CorrectionWPFBanque.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CorrectionWPFBanque"
        mc:Ignorable="d"
        Title="Gestion compte" Height="485" Width="800">
    <StackPanel>
        <Menu>
            <MenuItem Header="Info Compte" Command="{Binding InfoCompteCommand}" CommandParameter="{Binding ElementName=Result}" />
            <MenuItem Header="Création compte" Command="{Binding CreationCompteCommand}" CommandParameter="{Binding ElementName=Result}" />
        </Menu>
        <StackPanel x:Name="Result">
            
        </StackPanel>
    </StackPanel>
</Window>
